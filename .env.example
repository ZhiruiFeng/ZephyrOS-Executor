# ZMemory API Configuration
# For production, use: https://zmemory.vercel.app
# For local testing, use: http://localhost:5000 (with mock_zmemory_server.py)
ZMEMORY_API_URL=http://localhost:5000

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration (for authentication - same as ZephyrOS)
# Get these from your Supabase project settings or use the same values as zflow
# REQUIRED: The executor uses Supabase for user authentication
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Executor Configuration
AGENT_NAME=zephyr-executor-1
MAX_CONCURRENT_TASKS=2
POLLING_INTERVAL_SECONDS=30

# Terminal Execution Mode Configuration
# EXECUTION_MODE: "api" (default, uses Claude API directly) or "terminal" (spawns Terminal.app with Claude Code)
EXECUTION_MODE=api

# Claude Code CLI Settings (only used when EXECUTION_MODE=terminal)
CLAUDE_CODE_PATH=/usr/local/bin/claude
SHOW_TERMINAL_WINDOW=true
TERMINAL_APP=Terminal  # "Terminal" (Terminal.app) or "iTerm" (iTerm2)

# Workspace Configuration (for terminal mode)
WORKSPACE_BASE_DIR=/tmp/zephyros-tasks
AUTO_CLEANUP_WORKSPACES=true
MAX_WORKSPACE_AGE_HOURS=24
